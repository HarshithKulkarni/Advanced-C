#include<stdio.h>
#include<stdlib.h>
struct student
{
         char name[15];
         char roll[20];
         char dept[20];
         int marks;
         char grade[2];
}i;
int record(int j)
{
        int n;
        for(n=0;n<j;n++)
        {
                printf("Enter the name of the student\n");
                scanf("%s",i.name);
                printf("Enter student's roll number\n");
                scanf("%s",i.roll);
                printf("Enter the department of the student\n");
                scanf("%s",i.dept);
                printf("Enter the marks of the student\n");
                scanf("%d",&i.marks);
                printf("Enter the student grade\n");
                scanf("%s",i.grade);
                printf("The name of the student is %s\n",i.name);
                printf("The roll number of the student is %s\n",i.roll);
                printf("The department of the student is %s\n",i.dept);
                printf("The marks of the student is %d\n",i.marks);
                printf("The grade of the student is %s\n",i.grade);
        }
}
int main()
{
        int j;
        printf("Enter the number of students\n");
        scanf("%d",&j);
        record(j);
}
